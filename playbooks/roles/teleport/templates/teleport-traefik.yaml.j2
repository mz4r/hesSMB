apiVersion: traefik.io/v1alpha1
kind: ServersTransport
metadata:
  name: teleport-transport
  namespace: {{ teleport_namespace }}
spec:
  insecureSkipVerify: true

---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: teleport-tls
  namespace: {{ teleport_namespace }}
spec:
  secretName: teleport-tls
  issuerRef:
    name: "local-pki-issuer"
    kind: ClusterIssuer
  commonName: {{ teleport_domain }}
  dnsNames:
    - {{ teleport_domain }}

---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: teleport-route
  namespace: {{ teleport_namespace }}
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`{{ teleport_domain }}`)
      kind: Rule
      services:
        - name: {{ teleport_cluster_name }}
          port: 443
          scheme: https
          serversTransport: teleport-transport
  tls:
    secretName: teleport-tls